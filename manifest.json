{
  "manifest_version": 3,
  "name": "Me @ GitHub",
  "version": "1.0.0",
  "description": "Easily scroll to every place you've been mentioned in a GitHub issue, PR or discussion",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/*/issues/*",
        "https://github.com/*/*/pull/*",
        "https://github.com/*/*/discussions/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
